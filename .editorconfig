# Declarations of the root
root = true

# Applies for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
curly_bracket_next_line = false
spaces_around_operators = true

# Applies to all JavaScript files
[*.js]
indent_size = 2
quote_type = single

# Applies to all Markdown files
[*.md]
trim_trailing_whitespace = false